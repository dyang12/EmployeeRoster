<!DOCTYPE html>
<html>
<head>
  <title>EmployeeRoster</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<h1>Contacts Application</h1>
	<% if current_employee %>
		<%= button_to "Log Out", session_url(current_employee), :method => :delete %>
		<% if current_employee.admin %>
			<%= button_to "Add Employee", new_employee_url, :method => :get %>
		<% end %>
	<% end %>
	
	<%= yield %>

</body>
</html>
